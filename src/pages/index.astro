---
import "../styles/global.css";

import Topbar from "../components/Topbar.astro";
import Skill from "../components/Skill.astro";
import Social from "../components/Social.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>twilight.horse</title>
	</head>
	<body class="grid gap-4 lg:w-3/4 my-4 m-auto">
		<Topbar />
		<div class="grid gap-4 border border-twilight-purple p-4">
			<div class="gap-8" id="about">
				<h2 class="text-2xl font-bold mb-2">about</h2>
				<div class="flex gap-4">
					<div class="flex gap-2">
						<a
							href="https://derpibooru.org/images/3634445"
							target="_blank"
						>
							<img
								class="rounded-full w-[128px] border-6 twilight-purple"
								src="/avatar.png"
							/>
						</a>
						<div>
							<h1 class="text-3xl font-bold">compscitwilight</h1>
							<p>
								Open-source software, student, community
								infrastructure
							</p>
							<hr class="h-px my-2 border-0 bg-purple-600" />
							<div class="flex gap-1 flex-wrap">
								<Skill
									name="TypeScript"
									image="typescript.png"
								/>
								<Skill name="Golang" image="go.png" />
								<Skill name="Python" image="python.png" />
								<Skill name="Java" image="java.png" />
								<Skill name="Lua" image="lua.png" />
							</div>
						</div>
					</div>
					<div class="grid gap-2 flex-1">
						<Social
							handle="compscitwilight"
							href="https://x.com/@compscitwilight"
							image="twitter.png"
						/>
						<Social
							handle="compscitwilight"
							href="https://github.com/compscitwilight"
							image="github.png"
						/>
						<Social
							handle="compscitwilight"
							href="https://discord.com/users/472530726613549066"
							image="discord.png"
						/>
					</div>
				</div>
			</div>
			<div id="about"></div>
			<div id="projects">
				<h2 class="text-2xl font-bold mb-2">projects</h2>
			</div>
			<div id="contact">
				<h2 class="text-2xl font-bold mb-2">contact</h2>
			</div>
		</div>
	</body>
</html>
